<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_record_recycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border_bottom"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="35dp">

    <ImageView
        android:id="@+id/ivRecyclernumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toStartOf="@+id/ivRecyclespotmain"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:srcCompat="@drawable/ic_marker1" />

    <ImageView
        android:id="@+id/ivRecyclespotmain"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toEndOf="@+id/ivRecyclernumber"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvRecyclespotname"
        android:layout_width="264dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textStyle="bold"
        card_view:layout_constraintBottom_toTopOf="@+id/tvRecyclerspotloc"
        card_view:layout_constraintStart_toEndOf="@+id/ivRecyclespotmain"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/tvRecyclerspotloc"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="top"
        android:text="TextView"
        android:textSize="10sp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toEndOf="@+id/ivRecyclespotmain"
        card_view:layout_constraintTop_toBottomOf="@+id/tvRecyclespotname" />

    <ImageView
        android:id="@+id/ivRecycledelete"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="32dp"
        android:foregroundGravity="center_vertical"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:srcCompat="@drawable/ic_delete_black_24dp" />


</android.support.constraint.ConstraintLayout>