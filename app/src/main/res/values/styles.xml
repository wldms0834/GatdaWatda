<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
    </style>

    <style name="CustomTextView" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/rixgom</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay">
        <item name="colorPrimary">@color/mainColor</item>
    </style>
    <style name="AppTheme.PopupOverlay">
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <style name="AppTheme.FilterSpinner" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Subheader">
        <item name="android:fontFamily">@font/rixgom</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.description">
        <item name="android:fontFamily">@font/rixgom</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MyCustomDialogStyle" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar.MinWidth">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/rixgom</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>

    </style>


</resources>